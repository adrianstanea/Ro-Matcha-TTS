
help:  ## Show help
	@grep -E '^[.a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

clean: ## Clean autogenerated files
	rm -rf dist
	find . -type f -name "*.DS_Store" -ls -delete
	find . | grep -E "(__pycache__|\.pyc|\.pyo)" | xargs rm -rf
	find . | grep -E ".pytest_cache" | xargs rm -rf
	find . | grep -E ".ipynb_chepoints" | xargs rm -rf
	rm -f .coverage

clean-logs: ## Clean logs
	rm -rf logs/**

create-package: ## Create wheel and tar gz
	rm -rf dist/
	python setup.py bdist_wheel --plat-name=manylinux1_x86_64
	python setup.py sdist
	python -m twine upload  dist/* --verbose --skip-existing

format: ## Run pre-commit hooks
	pre-commit run -a

sync: ## Merge changes from main branch to your current branch
	git pull
	git pull origin main

test: ## Run not slow tests
	pytest -k "not slow"

test-full: ## Run all tests
	pytest

train-swara: ## Train the model
	CUDA_VISIBLE_DEVICES=6 python matcha/train.py experiment=swara trainer.max_epochs=1200 ckpt_path=test/checkpoint_epoch_949.ckpt

train-swara-ckpt: ## Train the model
	CUDA_VISIBLE_DEVICES=5 python matcha/train.py experiment=swara trainer.max_epochs=1000 ckpt_path=last.ckpt

finetune-swara_bas:
	CUDA_VISIBLE_DEVICES=6 python matcha/train.py experiment=swara_bas trainer.max_epochs=1000 ckpt_path=last.ckpt

finetune-swara_sgs:
	CUDA_VISIBLE_DEVICES=7 python matcha/train.py experiment=swara_sgs trainer.max_epochs=1000 ckpt_path=last.ckpt

# ==============================================================================
# Experiments: round 2
finetune-swara_bas_10:
