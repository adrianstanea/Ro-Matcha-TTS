	CUDA_VISIBLE_DEVICES=6 python matcha/train.py experiment=swara_bas_950 trainer.max_epochs=1131 ckpt_path=matcha-base-1000.ckpt

finetune-swara_sgs_10:
	CUDA_VISIBLE_DEVICES=7 python matcha/train.py experiment=swara_sgs_10 trainer.max_epochs=1131 ckpt_path=matcha-base-1000.ckpt

finetune-swara_sgs_950:
	CUDA_VISIBLE_DEVICES=7 python matcha/train.py experiment=swara_sgs_950 trainer.max_epochs=1131 ckpt_path=matcha-base-1000.ckpt

